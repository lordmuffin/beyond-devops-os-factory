#cloud-config

autoinstall:
  version: 1
  
  locale: en_US.UTF-8
  keyboard:
    layout: us
    
  network:
    network:
      version: 2
      ethernets:
        ens3:
          dhcp4: true
          
  storage:
    layout:
      name: direct
      
  identity:
    hostname: kairos-builder
    username: kairos
    password: '$6$nSvhkvPEFj9McudL$iLfFq4TTTXbC.rWuYHe4ddZbVaPYYNLzyHRF./kP1S/kWKkDsrM29m8QFcTVG8c6KNZM8lJzOEaOFGtniqLYB1'
    
  ssh:
    install-server: true
    allow-pw: true
    pwauth: true
    authorized-keys: []
    
  packages:
    - openssh-server
    
  early-commands:
    - systemctl start ssh
    
  late-commands:
    - echo 'kairos ALL=(ALL) NOPASSWD:ALL' > /target/etc/sudoers.d/kairos
    - chmod 440 /target/etc/sudoers.d/kairos
    - echo 'PasswordAuthentication yes' >> /target/etc/ssh/sshd_config
    - echo 'PermitEmptyPasswords no' >> /target/etc/ssh/sshd_config
    - echo 'PubkeyAuthentication yes' >> /target/etc/ssh/sshd_config
    - curtin in-target --target=/target -- systemctl enable ssh
    - curtin in-target --target=/target -- systemctl start ssh
    
  power_state:
    mode: reboot